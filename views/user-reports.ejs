<!DOCTYPE html>
<html lang="sw">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Ripoti za <%= username %></title>
<link rel="stylesheet" href="/css/user-reports.css">
<style>
html { scroll-behavior: smooth; }

/* Navbar */
nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  padding: 10px 16px;
  background: #fff;
  border-bottom: 1px solid #ddd;
  position: relative; /* important for dropdown positioning */
  z-index: 10;
}

/* Mention bell */
#mention-bell {
  position: relative;
  cursor: pointer;
  font-size: 20px;
  display: inline-flex;
  align-items: center;
}

#mention-count {
  position: absolute;
  top: -6px;
  right: -10px;
  background: red;
  color: white;
  font-size: 12px;
  width: 18px;
  height: 18px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0% { transform: scale(1); opacity:1; }
  50% { transform: scale(1.3); opacity:0.7; }
  100% { transform: scale(1); opacity:1; }
}

/* Mentions dropdown */
#mentions-dropdown {
  display: none;
  position: absolute;
  top: 40px;
  right: 0;
  width: 90vw;
  max-width: 360px;
  max-height: 400px;
  background: #fff;
  border: 1px solid #ccc;
  border-radius: 8px;
  box-shadow: 0 4px 16px rgba(0,0,0,0.2);
  overflow-y: auto;
  z-index: 9999; /* above everything */
}

#mentions-dropdown ul {
  list-style: none;
  margin: 0;
  padding: 8px 0;
}

#mentions-dropdown li {
  display: flex;
  align-items: flex-start;
  gap: 10px;
  padding: 8px 16px;
  cursor: pointer;
  transition: background 0.2s;
}

#mentions-dropdown li:hover {
  background: #f0f2f5;
}

.mention-avatar {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  flex-shrink: 0;
}

.mention-user-link { font-weight: bold; color: #405DE6; text-decoration: none; }
.mention-user-link:hover { text-decoration: underline; }

.mention-comment-link { color: #333; text-decoration: underline; cursor: pointer; }

/* Highlight comment */
.highlight { background-color: #fff3b0; transition: background-color 1.5s ease; }

/* Responsive */
@media (max-width: 480px) {
  #mentions-dropdown {
    right: 5px;
    left: 5px;
    width: auto;
  }
}
</style>
</head>
<body>

<nav>
  <h1>Ripoti za <%= username %></h1>
  <div style="display:flex; align-items:center; gap:12px; flex-wrap:wrap;">
    <span>Umeingia kama: <strong><%= loggedInUser %></strong></span>
    <button onclick="location.href='/dashboard.html'">Nyumbani</button>
    <button onclick="location.href='/logout'">Toka</button>

    <!-- Mention bell -->
    <span id="mention-bell">
      üîî 
      <% if(mentions.length>0){ %>
      <span id="mention-count"><%= mentions.length %></span>
      <% } %>
      <!-- Dropdown inside nav -->
      <div id="mentions-dropdown">
        <ul>
          <% mentions.forEach(m => { %>
            <% if(m.comment_id){ %>
            <li>
              <img src="https://ui-avatars.com/api/?name=<%= m.from_user %>&background=405DE6&color=fff&size=32" class="mention-avatar">
              <div style="flex:1; line-height:1.3; font-size:14px;">
                <a href="/user/<%= m.from_user %>" class="mention-user-link">@<%= m.from_user %></a>
                mentioned you in
                <a href="#comment-<%= m.comment_id %>" class="mention-comment-link"><%= m.comment %></a>
                <div style="color:#888; font-size:12px; margin-top:2px;">
                  <%= new Date(m.created_at).toLocaleTimeString('sw-TZ',{hour:'2-digit',minute:'2-digit'}) %>
                </div>
              </div>
            </li>
            <% } %>
          <% }) %>
          <% if(mentions.length===0){ %>
            <li style="padding:10px; color:#888; text-align:center;">Hakuna mention mpya</li>
          <% } %>
        </ul>
      </div>
    </span>
  </div>
</nav>

<div class="container">
  <div class="user-header">
    <img id="userAvatar" src="https://ui-avatars.com/api/?name=<%= username %>&background=405DE6&color=fff" alt="avatar">
    <div class="info">
      <h2>Ripoti za <strong><%= username %></strong></h2>
      <div class="stats">
        <span id="totalPosts">Ripoti: <%= reports.length %></span>
        <span id="totalThumbsUp">üëç <%= reports.reduce((acc,r)=>acc+r.thumbs_up,0) %></span>
        <span id="totalThumbsDown">üëé <%= reports.reduce((acc,r)=>acc+r.thumbs_down,0) %></span>
      </div>

      <% if(username === loggedInUser){ %>
      <form id="avatarForm" class="avatar-upload">
        <label for="avatarInput" class="custom-file-btn">Chagua Faili</label>
        <input id="avatarInput" type="file" name="avatar" accept="image/*">
        <button type="submit">Sasisha Avatar</button>
      </form>
      <% } %>
    </div>
  </div>

  <div id="reports-container" class="reports-grid">
    <% reports.forEach(r => { %>
      <div class="report-card" id="report-<%= r.id %>">
        <h3><%= r.title %></h3>
        <p><%= r.description %></p>
        <% if(r.image){ %>
          <img src="<%= r.image %>" alt="report image">
        <% } %>
        <p class="timestamp"><%= r.timestamp %></p>
        <div class="reactions">
          üëç <span class="thumbs-up"><%= r.thumbs_up %></span>
          üëé <span class="thumbs-down"><%= r.thumbs_down %></span>
        </div>

        <div class="comments">
          <h4>Maoni:</h4>
          <% r.comments.forEach(c => { %>
            <% if(c.id){ %>
            <div class="comment" id="comment-<%= c.id %>">
              <a href="/user/<%= c.username %>" class="mention-user-link">@<%= c.username %></a>: 
              <span class="comment-text"><%= c.comment %></span>
              <span class="comment-time"><%= c.timestamp %></span>
            </div>
            <% } %>
          <% }) %>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<script>
const bell = document.getElementById("mention-bell");
const dropdown = document.getElementById("mentions-dropdown");

// Toggle dropdown
bell.addEventListener("click", e=>{
  e.stopPropagation();
  dropdown.style.display = dropdown.style.display==='none' ? 'block':'none';
});

// Close if clicked outside
document.addEventListener("click", e=>{
  if(!dropdown.contains(e.target) && e.target!==bell) dropdown.style.display='none';
});

// Highlight comment
function highlightComment(){
  const hash = window.location.hash;
  if(hash.startsWith("#comment-")){
    const el = document.querySelector(hash);
    if(el){
      el.scrollIntoView({behavior:'smooth', block:'center'});
      el.classList.add('highlight');
      setTimeout(()=>el.classList.remove('highlight'),1500);
    }
  }
}
window.addEventListener('load', highlightComment);
window.addEventListener('hashchange', highlightComment);

// Close dropdown on link click
document.querySelectorAll('.mention-comment-link, .mention-user-link').forEach(link=>{
  link.addEventListener('click', ()=>{ dropdown.style.display='none'; });
});
</script>

<script src="/js/main.js"></script>
</body>
</html>
