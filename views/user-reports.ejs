<style>
/* Base Styles */
:root {
  --primary: #405DE6;
  --secondary: #5851DB;
  --accent: #833AB4;
  --pink: #E1306C;
  --red: #FD1D1D;
  --orange: #F56040;
  --yellow: #FCAF45;
  --background: #FAFAFA;
  --card-bg: #FFFFFF;
  --text: #262626;
  --text-secondary: #8E8E8E;
  --border: #DBDBDB;
  --shadow: rgba(0, 0, 0, 0.1);
  --success: #4CAF50;
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
}

body {
  background-color: var(--background);
  color: var(--text);
  padding-top: 60px;
}

/* Navigation */
nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: linear-gradient(45deg, var(--primary), var(--accent));
  color: white;
  padding: 12px 5%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2px 10px var(--shadow);
  z-index: 1000;
}

nav h1 {
  font-size: 1.5rem;
  font-weight: 600;
}

.nav-actions {
  display: flex;
  align-items: center;
  gap: 15px;
}

.nav-actions span {
  font-size: 0.9rem;
}

.nav-actions strong {
  color: var(--yellow);
}

nav button {
  background: rgba(255, 255, 255, 0.15);
  border: 1px solid rgba(255, 255, 255, 0.25);
  color: white;
  padding: 6px 12px;
  border-radius: 20px;
  font-size: 0.9rem;
  cursor: pointer;
  transition: all 0.3s ease;
}

nav button:hover {
  background: rgba(255, 255, 255, 0.25);
}

/* Container */
.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 20px;
}

/* User Header */
.user-header {
  display: flex;
  align-items: center;
  gap: 25px;
  margin-bottom: 30px;
  padding: 25px;
  background: var(--card-bg);
  border-radius: 16px;
  box-shadow: 0 4px 12px var(--shadow);
  position: relative;
  overflow: hidden;
}

.user-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 5px;
  background: linear-gradient(to right, var(--primary), var(--accent), var(--pink));
}

.user-header img {
  width: 120px;
  height: 120px;
  border-radius: 50%;
  object-fit: cover;
  border: 4px solid var(--card-bg);
  box-shadow: 0 2px 10px var(--shadow);
  z-index: 2;
}

.user-header .info {
  flex: 1;
}

.user-header h2 {
  font-size: 1.8rem;
  margin-bottom: 10px;
  color: var(--text);
}

.user-header .stats {
  display: flex;
  gap: 25px;
  margin: 15px 0;
}

.user-header .stats span {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 1.1rem;
  font-weight: 500;
}

.user-header .stats span::before {
  content: '';
  display: block;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-bottom: 5px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.4rem;
}

.user-header .stats #totalPosts::before {
  content: 'üìù';
}

.user-header .stats #totalThumbsUp::before {
  content: 'üëç';
}

.user-header .stats #totalThumbsDown::before {
  content: 'üëé';
}

.avatar-upload {
  margin-top: 15px;
  display: flex;
  gap: 10px;
}

.avatar-upload input {
  flex: 1;
  padding: 8px 12px;
  border: 1px solid var(--border);
  border-radius: 8px;
  font-size: 0.9rem;
}

.avatar-upload button {
  background: var(--primary);
  color: white;
  border: none;
  padding: 8px 16px;
  border-radius: 8px;
  font-weight: 500;
  cursor: pointer;
  transition: background 0.3s;
}

.avatar-upload button:hover {
  background: var(--secondary);
}

/* Reports Grid */
.reports-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
  gap: 25px;
  margin-top: 20px;
}

/* Report Card */
.card {
  background: var(--card-bg);
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 4px 12px var(--shadow);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 25px var(--shadow);
}

.card-header {
  display: flex;
  align-items: center;
  padding: 15px;
  border-bottom: 1px solid var(--border);
}

.report-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  object-fit: cover;
  margin-right: 12px;
  border: 2px solid var(--primary);
}

.card-header-content {
  flex: 1;
}

.report-title {
  font-size: 1.1rem;
  font-weight: 600;
  margin-bottom: 3px;
}

.report-meta {
  font-size: 0.85rem;
  color: var(--text-secondary);
}

.card-body {
  padding: 15px;
}

.report-description {
  margin-bottom: 15px;
  line-height: 1.5;
}

.report-image {
  width: 100%;
  max-height: 300px;
  object-fit: cover;
  border-radius: 8px;
  margin-top: 10px;
  display: none;
}

.card-footer {
  padding: 15px;
  border-top: 1px solid var(--border);
}

.report-thumbs {
  display: flex;
  gap: 15px;
  margin-bottom: 15px;
  padding-bottom: 10px;
  border-bottom: 1px solid var(--border);
}

.report-thumbs span {
  display: flex;
  align-items: center;
  gap: 5px;
  font-weight: 500;
}

.report-comments h4 {
  margin-bottom: 10px;
  font-size: 1rem;
}

.comments-list {
  max-height: 150px;
  overflow-y: auto;
  margin-bottom: 15px;
  padding-right: 5px;
}

.comments-list::-webkit-scrollbar {
  width: 6px;
}

.comments-list::-webkit-scrollbar-track {
  background: transparent;
}

.comments-list::-webkit-scrollbar-thumb {
  background: var(--border);
  border-radius: 3px;
}

.comment-item {
  display: flex;
  align-items: flex-start;
  gap: 8px;
  margin-bottom: 12px;
  padding: 8px;
  border-radius: 8px;
  transition: background 0.2s;
}

.comment-item:hover {
  background: rgba(0, 0, 0, 0.03);
}

.comment-avatar {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  object-fit: cover;
  flex-shrink: 0;
}

.comment-content {
  flex: 1;
}

.comment-content .comment-user {
  font-weight: 600;
  font-size: 0.9rem;
  margin-bottom: 2px;
}

.comment-content .comment-text {
  font-size: 0.9rem;
  line-height: 1.4;
}

.comment-content .comment-time {
  font-size: 0.75rem;
  color: var(--text-secondary);
  margin-top: 3px;
}

.comment-form {
  display: flex;
  gap: 10px;
  margin-top: 10px;
}

.comment-form input {
  flex: 1;
  padding: 10px 12px;
  border: 1px solid var(--border);
  border-radius: 20px;
  font-size: 0.9rem;
  background: var(--background);
}

.comment-form button {
  background: var(--primary);
  color: white;
  border: none;
  padding: 8px 16px;
  border-radius: 20px;
  font-weight: 500;
  cursor: pointer;
  transition: background 0.3s;
}

.comment-form button:hover {
  background: var(--secondary);
}

/* Responsive Design */
@media (max-width: 768px) {
  .reports-grid {
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  }
  
  .user-header {
    flex-direction: column;
    text-align: center;
    padding: 20px 15px;
  }
  
  .user-header .stats {
    justify-content: center;
  }
  
  .nav-actions {
    flex-direction: column;
    gap: 8px;
    align-items: flex-end;
  }
}

@media (max-width: 480px) {
  .reports-grid {
    grid-template-columns: 1fr;
  }
  
  nav {
    padding: 10px 3%;
  }
  
  nav h1 {
    font-size: 1.2rem;
  }
  
  .user-header img {
    width: 90px;
    height: 90px;
  }
}

/* Animations */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}

.card {
  animation: fadeIn 0.5s ease forwards;
  opacity: 0;
}

.card:nth-child(2) { animation-delay: 0.1s; }
.card:nth-child(3) { animation-delay: 0.2s; }
.card:nth-child(4) { animation-delay: 0.3s; }
.card:nth-child(5) { animation-delay: 0.4s; }
.card:nth-child(6) { animation-delay: 0.5s; }

/* Loading Spinner */
.spinner {
  display: inline-block;
  width: 20px;
  height: 20px;
  border: 3px solid rgba(255,255,255,.3);
  border-radius: 50%;
  border-top-color: white;
  animation: spin 1s ease-in-out infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}
