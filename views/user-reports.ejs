<!DOCTYPE html>
<html lang="sw">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Ripoti za <%= username %></title>
<link rel="stylesheet" href="/css/user-reports.css">
<script>
  window.USERNAME = "<%= username %>";
  window.LOGGED_IN_USER = "<%= loggedInUser %>";
</script>
<script src="/js/user-reports.js"></script>
<style>
  html { scroll-behavior: smooth; }
  .highlight {
    background-color: yellow;
    transition: background-color 1s ease;
  }
</style>
</head>
<body>

<nav>
  <h1>Ripoti za <%= username %></h1>
  <div class="nav-actions">
    <span>Umeingia kama: <strong><%= loggedInUser %></strong></span>
    <button onclick="location.href='/dashboard.html'">Nyumbani</button>
    <button onclick="location.href='/logout'">Toka</button>

    <!-- Mention bell -->
    <span id="mention-bell" style="cursor:pointer; margin-left:15px;">
      🔔 <span id="mention-count"><%= mentions.length %></span>
    </span>
    <div id="mentions-dropdown" style="display:none; position:absolute; background:#fff; border:1px solid #ccc; width:350px; max-height:400px; overflow-y:auto; z-index:1000;">
      <ul id="mentionList">
        <% mentions.forEach(m => { %>
          <li style="margin-bottom:8px;">
            <!-- Username link -->
            <a href="/user/<%= m.from_user %>" style="font-weight:bold; text-decoration:none;">@<%= m.from_user %></a>
            mentioned you in 
            <!-- Comment link -->
            <a href="/user/<%= username %>#comment-<%= m.comment_id %>" class="mention-comment-link" style="text-decoration:underline; color:blue;"><%= m.comment %></a>
          </li>
        <% }) %>
      </ul>
    </div>
  </div>
</nav>

<div class="container">
  <div class="user-header">
    <img id="userAvatar" src="https://ui-avatars.com/api/?name=<%= username %>&background=405DE6&color=fff" alt="avatar">
    <div class="info">
      <h2>Ripoti za <strong><%= username %></strong></h2>
      <div class="stats">
        <span id="totalPosts">Ripoti: <%= reports.length %></span>
        <span id="totalThumbsUp">👍 <%= reports.reduce((acc,r)=>acc+r.thumbs_up,0) %></span>
        <span id="totalThumbsDown">👎 <%= reports.reduce((acc,r)=>acc+r.thumbs_down,0) %></span>
      </div>

      <% if(username === loggedInUser){ %>
      <form id="avatarForm" class="avatar-upload">
        <label for="avatarInput" class="custom-file-btn">Chagua Faili</label>
        <input id="avatarInput" type="file" name="avatar" accept="image/*">
        <button type="submit">Sasisha Avatar</button>
      </form>
      <% } %>
    </div>
  </div>

  <div id="reports-container" class="reports-grid">
    <% reports.forEach(r => { %>
      <div class="report-card" id="report-<%= r.id %>">
        <h3><%= r.title %></h3>
        <p><%= r.description %></p>
        <% if(r.image){ %>
          <img src="<%= r.image %>" alt="report image">
        <% } %>
        <p class="timestamp"><%= r.timestamp %></p>
        <div class="reactions">
          👍 <span class="thumbs-up"><%= r.thumbs_up %></span>
          👎 <span class="thumbs-down"><%= r.thumbs_down %></span>
        </div>

        <div class="comments">
          <h4>Maoni:</h4>
          <% r.comments.forEach(c => { %>
            <div class="comment" id="comment-<%= c.id %>">
              <a href="/user/<%= c.username %>" style="font-weight:bold;">@<%= c.username %></a>: <%= c.comment %>
              <span class="comment-time"><%= c.timestamp %></span>
            </div>
          <% }) %>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<script>
  const bell = document.getElementById("mention-bell");
  const dropdown = document.getElementById("mentions-dropdown");
  bell.addEventListener("click", () => {
    dropdown.style.display = dropdown.style.display === "none" ? "block" : "none";
  });

  // Highlight comment when navigating via mention link
  function highlightComment() {
    const hash = window.location.hash;
    if(hash.startsWith("#comment-")) {
      const el = document.querySelector(hash);
      if(el) {
        el.classList.add("highlight");
        setTimeout(()=>el.classList.remove("highlight"), 1500); // remove highlight after 1.5s
      }
    }
  }
  window.addEventListener("load", highlightComment);
  window.addEventListener("hashchange", highlightComment);
</script>

<script src="/js/main.js"></script>
</body>
</html>
